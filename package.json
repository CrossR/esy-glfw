{
  "name": "esy-glfw",
  "version": "3.2.1006",
  "description": "GLFW bindings for OCaml",
  "license": "MIT",
  "esy": {
    "build": [
        ["make", "#{os == 'windows' ? 'noop' : 'build-glfw'}", "ROOTDIR=#{self.root}"],
        ["make", "install", "ROOTDIR=#{self.root}", "LIBDIR=#{self.lib}", "INCLUDEDIR=#{self.install / 'include'}"]
    ],
    "buildsInSource":"_build",
    "exportedEnv": {
        "GLFW_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "GLFW_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "dependencies": {
    "esy-cmake": "^0.3.2"
  }
}
