{
  "name": "reason-glfw",
  "version": "3.2.1006",
  "description": "GLFW bindings for OCaml",
  "license": "MIT",
  "esy": {
    "build": [
        ["make", "#{os == 'windows' ? 'noop' : 'build-glfw'}", "ROOTDIR=#{self.root}"],
        ["make", "install", "ROOTDIR=#{self.root}", "LIBDIR=#{self.lib}"]
    ],
    "buildsInSource":"_build",
    "exportedEnv": {
        "GLFW_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "GLFW_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "dependencies": {
    "@opam/dune": "^1.5.0",
    "@esy-ocaml/reason": "^3.3.7",
    "refmterr": "^3.1.0",
    "@opam/js_of_ocaml": "^3.3.0",
    "@opam/js_of_ocaml-compiler": "^3.3.0",
    "@opam/js_of_ocaml-lwt": "^3.3.0",
    "@opam/lwt": "^4.0.0",
    "@opam/lwt_ppx": "^1.1.0",
    "esy-cmake": "^0.3.2",
    "reason-gl-matrix": "^0.2.0"
  },
  "resolutions": {
    "@opam/cmdliner": "1.0.2"
  },
  "devDependencies": {
    "ocaml": "~4.6.0"
  }
}
